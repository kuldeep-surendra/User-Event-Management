
<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "Event app", welcome_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li> <%= link_to "log in", log_in_path %></li>

          </ul>
        </nav>
      </div>
